
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Autenticacion</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/AdminLTE/css")
    <style>
       section {
           background: url( @Url.Content("~/Content/Images/Fondo-utiles-escolares2.jpg") )
           top center / 100% 100% no-repeat
           /*background-color: #9A616D;*/
       }

         /*medida {
           width : 481px;
           height : 721px;
       }*/

    </style>
</head>
<body>

    @*<section class="vh-100" style="background-color: #9A616D;">*@
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <!-- Card  -->

                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">

                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="@Url.Content("~/Content/images/utiles-compras4.jpg")"
                                     alt="login form" class="img-fluid medida" style="border-radius: 1rem 0 0 1rem;" />
                            </div>

                            <div class="col-md-6 col-lg-7 d-flex align-items-center">

                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form action="@Url.Action("Autenticacion","Login")" method="post">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            @*<i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>*@

                                            <img class="img-fluid" src="@Url.Content("~/Content/Images/Logo.PNG")"/>



                                            @*<i class="fas fa-book fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">
                                                Logo
                                            </span>*@
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresa en un tu cuenta</h5>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="form2Example17" class="form-control form-control-lg" name="usuario" />
                                            <label class="form-label" for="form2Example17">Usuario</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27" class="form-control form-control-lg" name="password" />
                                            <label class="form-label" for="form2Example27">Contraseña</label>
                                        </div>

                                        @{

                                            if (ViewBag.Error != null)
                                            {
                                                <div class="form-floating mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-info btn-lg btn-block" type="submit">Iniciar Sesión <i class="fas fa-sign-in-alt ms-2"></i></button>
                                        </div>

                                        @*<a class="small text-muted" href="#!">Forgot password?</a>*@
                                        @*<p class="mb-5 pb-lg-2" style="color: #393f81;">
                                                Don't have an account? <a href="#!"
                                                                          style="color: #393f81;">Register here</a>
                                            </p>*@
                                        @*<a href="#!" class="small text-muted">Terms of use.</a>
                                            <a href="#!" class="small text-muted">Privacy policy</a>*@
                                    </form>

                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

@Scripts.Render("~/bundles/AdminLTE")
@Scripts.Render("~/bundles/Complementos")
</body>
</html>
